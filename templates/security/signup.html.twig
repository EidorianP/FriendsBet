{% extends 'base.html.twig' %}

{% block title 'Inscription' %}

{% block body %}
    <div class="container">
        <div class="row py-5 mt-4 align-items-center">
            <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
                <img src="https://res.cloudinary.com/mhmd/image/upload/v1569543678/form_d9sh6m.svg" alt="" class="img-fluid mb-3 d-none d-md-block">
                <h1>Création d'un compte</h1>
                <p class="font-italic text-muted mb-0">Créer un compte afin de commencer vos meilleurs paris en ligne.</p>
            </div>

            <div class="col-md-7 col-lg-6 ml-auto">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-12 mb-4">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="col-lg-12 mb-4">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="col-lg-12 mb-4">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="col-lg-12 mb-4">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-lg-12 mx-auto mb-0">
                        <input type="submit" value="Inscription" class="yellow-btn">
                    </div>
                </div>
                {{ form_end(form) }}


                <!-- Divider Text -->
                <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
                    <div class="border-bottom w-100 ml-5"></div>
                    <span class="px-2 small text-muted font-weight-bold text-muted">OU</span>
                    <div class="border-bottom w-100 mr-5"></div>
                </div>
                <div class="text-center w-100">
                    <p class="text-muted font-weight-bold">Déjà inscrit? <a href="{{ path('security.login') }}" class="text-primary ml-2">Connexion</a></p>
                </div>
            </div>
            </form>
        </div>
    </div>
    </div>

{% endblock %}




